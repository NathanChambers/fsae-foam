FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale 1;
length 10;
width 10;
height 2;
resolution 2;

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

xmin #eval{ 0 - ($length / 2) };
xmax #eval{ $length / 2 };

ymin #eval{ 0 - ($width / 2) };
ymax #eval{ $width / 2 };

zmin 0;
zmax $height;

xres #eval{ $width * $resolution };
yres #eval{ $height * $resolution };
zres #eval{ $length * $resolution };

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

vertices
(
    ($xmin $ymin $zmin)
    ($xmin $ymax $zmin)
    ($xmin $ymax $zmax)
    ($xmin $ymin $zmax)
    ($xmax $ymin $zmin)
    ($xmax $ymax $zmin)
    ($xmax $ymax $zmax)
    ($xmax $ymin $zmax)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($xres $yres $zres) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (0 1 2 3) // Inlet
            (1 2 6 5) // Front
        );
    }

    outlet {
        type patch;
        faces (
            (5 4 7 6) //Outlet
            (0 3 7 4) // Back
        );
    }

    ground
    {
        type wall;
        faces
        (
            (0 1 5 4) // Bottom
        );
    }
         
    walls
    {
        type wall;
        faces
        (
            
            (2 3 7 6) // Top
        );
    }
);

mergePatchPairs
(
);

// ************************************************************************* //
