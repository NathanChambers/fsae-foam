/*--------------------------------*- C++ -*----------------------------------*\
|   OpenFOAM specific dissipation rate field (omega)                          |
\*---------------------------------------------------------------------------*/

FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}

#include "include/constants"

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform $turbulentOmega;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type    fixedValue;
        value   uniform $turbulentOmega;   // Set turbulence level at inlet
    }

    outlet
    {
        type        inletOutlet;           // Outflow with fallback
        inletValue  uniform $turbulentOmega;
        value       uniform $turbulentOmega;
    }

    ground
    {
        type    omegaWallFunction;
        value   uniform $turbulentOmega;   // Dummy initial value
    }

    walls
    {
        type    omegaWallFunction;
        value   uniform $turbulentOmega;
    }

    "(fsae).*"
    {
        type    omegaWallFunction;
        value   uniform $turbulentOmega;
    }
}
