/*--------------------------------*- C++ -*----------------------------------*\
|   OpenFOAM turbulence kinetic energy field (k)                              |
\*---------------------------------------------------------------------------*/

FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}

#include "include/constants"

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform $turbulentKE;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type    fixedValue;              // Specify turbulence at inlet
        value   uniform $turbulentKE;
    }

    outlet
    {
        type    inletOutlet;             // Allows backflow with turbulence
        inletValue uniform $turbulentKE;
        value       uniform $turbulentKE;
    }

    ground
    {
        type    kqRWallFunction;         // Wall treatment for turbulence k
        value   uniform $turbulentKE;
    }

    walls
    {
        type    kqRWallFunction;
        value   uniform $turbulentKE;
    }

    "(fsae).*"
    {
        type    kqRWallFunction;
        value   uniform $turbulentKE;
    }
}
