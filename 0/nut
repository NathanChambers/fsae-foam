/*--------------------------------*- C++ -*----------------------------------*\
|   OpenFOAM turbulent kinematic viscosity field (nut)                        |
\*---------------------------------------------------------------------------*/

FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type    calculated;
        value   uniform 0;
    }

    outlet
    {
        type    calculated;
        value   uniform 0;
    }

    ground
    {
        type    nutkWallFunction;   // Smooth wall treatment
        value   uniform 0;
    }

    walls
    {
        type    nutkWallFunction;
        value   uniform 0;
    }

    // Tyres as rough walls (optional):
    // "(fsaeHighWheel_Tyre).*"
    // {
    //     type    nutkRoughWallFunction;
    //     Ks      uniform 0;   // Roughness height (m)
    //     Cs      uniform 0.5; // Empirical constant
    //     value   uniform 0;
    // }

    "(fsae).*"
    {
        type    nutkWallFunction;
        value   uniform 0;
    }
}
