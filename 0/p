/*--------------------------------*- C++ -*----------------------------------*\
|   OpenFOAM pressure boundary conditions (p)                                 |
\*---------------------------------------------------------------------------*/

FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}

#include "include/constants"

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform $pressure;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            zeroGradient;   // Let solver adjust pressure at inlet
    }

    outlet
    {
        type            fixedValue;     // Reference pressure
        value           uniform 0;
    }

    ground
    {
        type            zeroGradient;
    }

    walls
    {
        type            zeroGradient;
    }

    "(fsae).*"
    {
        type            zeroGradient;
    }
}
